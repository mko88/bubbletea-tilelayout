{
  "name": "Go + Bubble Tea",
  "image": "mcr.microsoft.com/devcontainers/go:latest",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "ms-vscode.makefile-tools"
      ],
      "settings": {
        "go.lintOnSave": "package",
        "go.lintTool": "golangci-lint",
        "go.lintFlags": ["--fast"]
      }
    }
  },
  "forwardPorts": [8000, 8080],
  "postCreateCommand": "go mod download && go install github.com/golangci-lint/golangci-lint/cmd/golangci-lint@latest",
  "remoteUser": "vscode"
}
